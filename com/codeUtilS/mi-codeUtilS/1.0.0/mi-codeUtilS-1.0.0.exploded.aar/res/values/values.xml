<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="reference" name="customEditTextStyle"/>
    <color name="myAccentColor">#03DAC5</color>
    <color name="myButtonTextColor">#FFFFFF</color>
    <color name="myEditTextTextColor">#212121</color>
    <color name="myPrimaryColor">#6200EE</color>
    <color name="myPrimaryDarkColor">#3700B3</color>
    <color name="myTextColorPrimary">#212121</color>
    <color name="myTextColorSecondary">#757575</color>
    <color name="myWindowBackground">#FFFFFF</color>
    <string name="hello_world">Hello world!</string>
    <string name="lib_name">Styles</string>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>
    <style name="CustomEditTextStyle">
            <item name="android:padding">10dp</item>
            <item name="android:textColor">#FFE8E9EA</item>
            <item name="android:background">#FF81817B</item>
            <item name="android:textSize">18sp</item>
            <!-- Otros atributos que quieras personalizar -->
        </style>
    <style name="MyButtonStyle">
            <item name="android:background">@drawable/my_button_background</item>
            <item name="android:textColor">@color/myButtonTextColor</item>
            <item name="android:padding">10dp</item>
            <item name="android:textSize">16sp</item>
        </style>
    <style name="MyCustomTheme">
            <!-- Atributos del tema -->
            <item name="android:windowBackground">@color/myWindowBackground</item>
            <item name="android:colorPrimary">@color/myPrimaryColor</item>
            <item name="android:colorPrimaryDark">@color/myPrimaryDarkColor</item>
            <item name="android:colorAccent">@color/myAccentColor</item>
            <item name="android:textColorPrimary">@color/myTextColorPrimary</item>
            <item name="android:textColorSecondary">@color/myTextColorSecondary</item>
            <item name="android:buttonStyle">@style/MyButtonStyle</item>
            <item name="android:editTextStyle">@style/CustomEditTextStyle</item>
            <!-- Otros atributos segÃºn sea necesario -->
        </style>
</resources>